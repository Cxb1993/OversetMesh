FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          oversetMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolation
{
    type injection;
}

// Names or patches that determine hole cells
holePatches  ( hull sailAll sternFins );

regions
(
    background
    {
        // Donor regions
        donorRegions ( suboff );

        fringe
        {
            type overlap;

            donorSuitability
            {
//                 type noSuitability;

                type patchDistance;

                masterRegionDistancePatches
                (
                    x_min x_max
                    y_min y_max
                    z_min z_max
                );
                donorRegionDistancePatches
                (
                    hull
                    sailAll
                    sternFins
                );
                threshold 0.5;
            }
        }
    }
    suboff
    {
        donorRegions ( background );

        fringe
        {
            type faceCells;
            patches ( x_min x_max y_min y_max z_min z_max );
        }
    }
);


